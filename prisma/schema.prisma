datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
enum Role {
  ADMIN
  USER

}
model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  lastName String
  firstName String
  password String
  role Role @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}
model Restaurant {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  address String
  logo String
  coverImage String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
  

